<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadOne"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/loginButtonColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/uploading_one"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/loginButtonColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/to_video_upload_activity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/video_upload" />

        <ImageButton
            android:id="@+id/to_audio_upload_activity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/audio_upload" />


    </LinearLayout>

</LinearLayout>